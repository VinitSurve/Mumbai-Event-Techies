
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public can read approved events
    match /events/{eventId} {
      allow read: if resource.data.isApproved == true;
      allow create: if true; // allow creates via secured API route
      allow update, delete: if false; // no direct updates/deletes
    }

    // Track submissions (optional)
    match /submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Default deny all other collections
    match /{document=**} {
        allow read, write: if false;
    }
  }
}
