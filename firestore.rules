rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public creation of pending events, but only admins can read/update them.
    match /pendingEvents/{requestId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Allow public read for approved events. Only admins can manage them.
    match /events/{eventId} {
      allow read: if resource.data.isApproved == true;
      allow create, update, delete: if isAdmin();
    }

    // Admin logs are only accessible by admins.
    match /adminLogs/{logId} {
      allow read, write: if isAdmin();
    }

    // Helper function to check for admin privileges.
    // This assumes you have a custom claim 'admin' set to true on your admin user accounts.
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
  }
}
